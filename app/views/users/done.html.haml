.single-container
  .single-header
    %h1.single-header__logo
      = link_to do
        %img.mercari-logo{:alt => "mercari", :src => "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?128691313"}/
    %img.progress__bar__status__done{:src => "https://i.gyazo.com/e5a941b8d933495052575017ab4ec24f.png"}/
  %main.single-main
    %section.single-main__container
      %h2.single-main__container__header 会員登録完了
      %form.registration-form{action: "https://www.mercari.com/jp/signup/sms_confirmation/", method: "POST", novalidate: "novalidate"}
        %input{name: "__csrf_value", type: "hidden", value: "220cd81a6001880b1cc399135577a94718d18e95390fe41377f7fa263b488981779653fce9645dd5fc913c2a343a8b17111d517c70e50f44a4dd41c7f4cd6df06"}/
        .registration-form__content
          %p.done.message ありがとうございます。
          %p.done.message 会員登録が完了しました。
          %button.btn-default.btn-red{type: "submit"} メルカリをはじめる 
          %image.image__kari{src: "https://i.gyazo.com/3115ad076f4ae0ac5d647ccec944218e.png"}


  %footer.single-footer
    %nav
      %ul.single-footer__menu
        %li.single-footer__menu__content
          = link_to class: 'privasy' do
            プライバシーポリシー
        %li.single-footer__menu__content
          = link_to class: 'terms' do
            メルカリ利用規約
        %li.single-footer__menu__content
          = link_to class: 'transaction' do
            特定商取引に関する表記
    = link_to class: 'single-footer-logo' do
      %img.footer-logo{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2855175014"}/
    %p.footer-century
      %small © 2019 Mercari